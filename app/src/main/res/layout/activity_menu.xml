<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="20sp"
        android:text="@string/menu"
        android:textSize="40sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="10sp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_fab_menu_id"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp"
            app:cardElevation="20sp"
            app:cardBackgroundColor="#292929">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:fontFamily="@font/b_titr_bold"
                android:text="Floating\nAction Button\n&amp;\nSnackBar"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_bg_menu_id"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp"
            app:cardElevation="20sp"
            app:cardBackgroundColor="#292929">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:fontFamily="@font/b_titr_bold"
                android:lineSpacingExtra="15sp"
                android:text="صفحه پس زمینه"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_1_menu_id"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp"
            app:cardElevation="20sp"
            app:cardBackgroundColor="#292929">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:fontFamily="@font/b_titr_bold"
                android:text="FloatingActionButton\n&amp;\nSnackBar"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_11_menu_id"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="15sp"
            app:cardElevation="20sp"
            app:cardBackgroundColor="#292929">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15sp"
                android:fontFamily="@font/b_titr_bold"
                android:text="FloatingActionButton\n&amp;\nSnackBar"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>